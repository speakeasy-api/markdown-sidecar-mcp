{
  "name": "mcp-markdown-sidecar",
  "version": "1.0.0",
  "author": "speakeasyapi",
  "type": "module",
  "bin": {
    "mcp": "bin/mcp-server.js"
  },
  "tshy": {
    "sourceDialects": [
      "mcp-markdown-sidecar/source"
    ],
    "exports": {
      ".": {
        "import": {
          "mcp-markdown-sidecar/source": "./src/index.ts",
          "types": "./dist/esm/index.d.ts",
          "default": "./dist/esm/index.js"
        },
        "require": {
          "types": "./dist/commonjs/index.d.ts",
          "default": "./dist/commonjs/index.js"
        }
      },
      "./package.json": "./package.json",
      "./*.js": {
        "import": {
          "mcp-markdown-sidecar/source": "./src/*.ts",
          "types": "./dist/esm/*.d.ts",
          "default": "./dist/esm/*.js"
        },
        "require": {
          "types": "./dist/commonjs/*.d.ts",
          "default": "./dist/commonjs/*.js"
        }
      },
      "./*": {
        "import": {
          "mcp-markdown-sidecar/source": "./src/*.ts",
          "types": "./dist/esm/*.d.ts",
          "default": "./dist/esm/*.js"
        },
        "require": {
          "types": "./dist/commonjs/*.d.ts",
          "default": "./dist/commonjs/*.js"
        }
      }
    }
  },
  "sideEffects": false,
  "scripts": {
    "lint": "eslint --cache --max-warnings=0 src",
    "build:mcp": "bun src/build.mts",
    "build": "npm run build:mcp",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "@modelcontextprotocol/sdk": "^1.5.0",
    "zod": ">= 3"
  },
  "peerDependenciesMeta": {
    "@modelcontextprotocol/sdk": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@modelcontextprotocol/sdk": "^1.5.0",
    "@stricli/core": "^1.1.1",
    "@types/express": "^4.17.21",
    "bun": "^1.2.2",
    "bun-types": "^1.2.2",
    "eslint": "^9.19.0",
    "express": "^4.21.2",
    "globals": "^15.14.0",
    "tshy": "^2.0.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.22.0",
    "zod": "^3.23.4"
  },
  "dependencies": {},
  "main": "./dist/commonjs/index.js",
  "types": "./dist/commonjs/index.d.ts",
  "module": "./dist/esm/index.js"
}
